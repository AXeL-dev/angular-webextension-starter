{
  "manifest_version": 2,

  "name": "__MSG_extensionName__",
  "version": "${version}",

  "default_locale": "en",
  "description": "__MSG_extensionDesc__",
  "icons": {
    "128": "assets/icons/128.png"
  },

  "web_accessible_resources": ["assets/icons/*.png"],

  "browser_action": {
    "default_icon": "assets/icons/128.png",
    "default_popup": "index.html"
  },

  "options_ui":{
    "page": "index.html?page=settings",
    "open_in_tab": false
  },

  "author": "${author}",
  "homepage_url": "${url}",

  "permissions": [
    "storage",
    "notifications"
  ]
}
